{
  "manifest_version": 2,

  "name": "SR.SE Widget",
  "description": "A widget for playing live channels from Sverige Radio",
  "version": "0.1",

  /*"content_security_policy": "script-src 'self' 'unsafe-eval';",*/

  "browser_action": {
    "default_icon": "style/icon.png",
    "default_popup": "index.html"
  },
	
  "background": {
    "page": "background.html"
  },

  "content_scripts": [ {
    "js": [ "script/react-0.12.2.js", "script/jquery-2.1.3.min.js", "script/bootstrap.min.js", "script/background.js", "script/main.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],

  "permissions": [
    "http://api.sr.se/api/v2/channels"
  ]
}